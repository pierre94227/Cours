{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div>
		<div id="profilsHead" class='d-flex flex-row align-items-center justify-content-between container border mt-3 bg-dark text-light col-11'>
			<h1 class="text-center">Accueil</h1>
		</div>
        
		<div class="d-flex flex-column flex-wrap">

			{% for profil in profils %}
				<div class='mb-1 mt-2 col-11 border container flex-wrap flex-shrink d-flex justify-content-between align-items-center bg-light '>
					<img class='col-2 m-3 border p-0' src='{{ profil.image }}'/>
					<p>{{ profil.nom }}
						{{ profil.prenom }}</p>
					<a class='text-center col-3 border bg-dark text-light shadow-sm' href="{{ path('profil_show' , {'id': profil.id}) }}">Voir Plus</a>
				</div>
			{% endfor %}

		</div>
	</div>
{% endblock %}
